{
    "version": 2,
    "builds": [
        {
            "src": "api/linebot.js",
            "use": "@vercel/node",
            "config": {
                "maxLambdaSize": "15mb",
                "includeFiles": "src/**"
            }
        }
    ],
    "routes": [
        {
            "src": "/webhook",
            "dest": "/api/linebot",
            "methods": ["POST"]
        },
        {
            "src": "/cron",
            "dest": "/api/linebot",
            "methods": ["GET"]
        },
        {
            "src": "/test",
            "dest": "/api/linebot",
            "methods": ["GET"]
        },
        {
            "src": "/.*",
            "dest": "/api/linebot"
        }
    ],
    "crons": [
        {
            "path": "/cron",
            "schedule": "0 18 * * *"
        }
    ]
}
