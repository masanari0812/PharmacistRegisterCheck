{
    "version": 2,
    "builds": [
        {
            "src": "src/linebot.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        { "src": "/webhook", "dest": "src/linebot.js" },
        { "src": "/cron", "dest": "src/linebot.js" }
    ],
    "crons": [
        {
            "path": "/cron",
            "schedule": "0 */3 * * *"
        }
    ]
}
